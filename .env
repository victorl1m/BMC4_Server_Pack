# Environment Configuration for Minecraft Forge Server
# Copy this file to .env and modify as needed

# Minecraft EULA Acceptance (REQUIRED)
EULA=true

# Java Virtual Machine Options
# Default: 4GB RAM allocation with optimized GC settings
JAVA_OPTS=-Xmx4G -Xms4G -Dlog4j2.formatMsgNoLookups=true -XX:+UseG1GC -XX:+UnlockExperimentalVMOptions -XX:MaxGCPauseMillis=100

# Alternative memory configurations:
# For 2GB servers: -Xmx2G -Xms2G
# For 6GB servers: -Xmx6G -Xms6G  
# For 8GB servers: -Xmx8G -Xms8G

# Server Configuration
SERVER_PORT=25565
MAX_PLAYERS=20
DIFFICULTY=normal
GAMEMODE=survival
PVP=true
HARDCORE=false

# World Configuration
LEVEL_NAME=world
LEVEL_SEED=
LEVEL_TYPE=bclib:normal
GENERATE_STRUCTURES=true

# Performance Settings
VIEW_DISTANCE=10
SIMULATION_DISTANCE=10
MAX_TICK_TIME=60000

# Network Settings
NETWORK_COMPRESSION_THRESHOLD=256
RATE_LIMIT=0

# Security Settings
ONLINE_MODE=true
ENFORCE_WHITELIST=false
ENFORCE_SECURE_PROFILE=true

# Server Description
MOTD=Better MC [FORGE] 1.20.1 - Dockerized

# Additional JVM arguments for performance (advanced users)
# Uncomment and modify as needed:
# JAVA_OPTS_ADDITIONAL=-XX:+DisableExplicitGC -XX:TargetSurvivorRatio=90 -XX:G1NewSizePercent=50
